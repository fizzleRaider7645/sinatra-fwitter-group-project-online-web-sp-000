<h1>Welcome, <%=current_user.username%></h1>
<h2>Tweets</h2>
<%@tweets.each do |tweet|%>
<p><%= tweet.content %></p>
<% end %>

<p><form method="post" action="/tweets/<%=@tweet.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Tweet">
</form></p>